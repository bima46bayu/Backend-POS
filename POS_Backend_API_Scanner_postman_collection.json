            "url": {"raw":"{{base_url}}/api/register","host":["{{base_url}}"],"path":["api","register"]},
            "body": {"mode":"raw","raw":"{\n  \"name\": \"Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"admin\"\n}"}
