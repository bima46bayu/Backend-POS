{
  "info": {
    "name": "POS API (Sanctum) — Admin & Kasir + Purchasing (PO Multi-Item & GR)",
    "_postman_id": "9d8f51c7-47f2-4e8f-9e0f-abcdef654321",
    "description": "Urutan lengkap: Register → Login → Master Data → Produk → Purchasing (PO header+items) → GR (for-receipt + receive) → Stock Logs → Sales → Logout.\nRoles: admin & kasir. GR akan menambah stok + tulis stock_logs (change_type=in).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "auth_token", "value": "" },

    { "key": "category_id", "value": "1" },
    { "key": "sub_category_id", "value": "1" },
    { "key": "supplier_id", "value": "1" },
    { "key": "product_id", "value": "1" },

    { "key": "purchase_id", "value": "1" },
    { "key": "goods_receipt_id", "value": "1" },

    { "key": "scan_sku", "value": "SKU-001" },
    { "key": "sale_id", "value": "1" }
  ],
  "item": [
    {
      "name": "01 Auth",
      "item": [
        {
          "name": "Register (Admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Register (Kasir)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Kasir A\",\n  \"email\": \"kasir@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"kasir\"\n}"
            }
          }
        },
        {
          "name": "Login (set {{auth_token}} otomatis)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data.token) {",
                  "    pm.collectionVariables.set('auth_token', data.token);",
                  "    pm.test('Stored auth token', function(){ pm.expect(pm.collectionVariables.get('auth_token')).to.be.ok; });",
                  "  }",
                  "} catch(e) {}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/login", "host": ["{{base_url}}"], "path": ["api","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
            }
          }
        }
      ]
    },

    {
      "name": "02 Master Data (Admin)",
      "item": [
        {
          "name": "POST Category (create)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/categories","host":["{{base_url}}"],"path":["api","categories"]},
            "body": {"mode":"raw","raw":"{\n  \"name\": \"Pakaian\"\n}"}
          }
        },
        {
          "name": "POST SubCategory (create)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/sub-categories","host":["{{base_url}}"],"path":["api","sub-categories"]},
            "body": {"mode":"raw","raw":"{\n  \"category_id\": {{category_id}},\n  \"name\": \"Kaos\"\n}"}
          }
        },
        {
          "name": "POST Supplier (create)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/suppliers","host":["{{base_url}}"],"path":["api","suppliers"]},
            "body": {"mode":"raw","raw":"{\n  \"name\": \"PT Tekstil Makmur\",\n  \"contact\": \"08123456789\"\n}"}
          }
        }
      ]
    },

    {
      "name": "03 Products",
      "item": [
        {
          "name": "POST Product (create)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/products","host":["{{base_url}}"],"path":["api","products"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"SKU-001\",\n  \"name\": \"Kaos Logo\",\n  \"description\": \"Kaos logo official\",\n  \"price\": 120000,\n  \"category_id\": {{category_id}},\n  \"sub_category_id\": {{sub_category_id}},\n  \"stock\": 0\n}"
            }
          }
        },
        {
          "name": "GET Products (list + search)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/products?search=Kaos",
              "host": ["{{base_url}}"],
              "path": ["api","products"],
              "query": [{"key":"search","value":"Kaos"}]
            }
          }
        },
        {
          "name": "SCAN by SKU (/products/search)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/products/search?sku={{scan_sku}}",
              "host": ["{{base_url}}"],
              "path": ["api","products","search"],
              "query": [{"key":"sku","value":"{{scan_sku}}"}]
            }
          }
        }
      ]
    },

    {
      "name": "04 Purchasing — PO (Header + Items)",
      "item": [
        {
          "name": "POST Purchase (Create Draft — multi-item)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases","host":["{{base_url}}"],"path":["api","purchases"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supplier_id\": {{supplier_id}},\n  \"order_date\": \"2025-09-16\",\n  \"expected_date\": \"2025-09-20\",\n  \"notes\": \"Urgent for promo\",\n  \"other_cost\": 25000,\n  \"items\": [\n    { \"product_id\": {{product_id}}, \"qty_order\": 10, \"unit_price\": 90000, \"discount\": 0, \"tax\": 0 },\n    { \"product_id\": 2, \"qty_order\": 5,  \"unit_price\": 150000, \"discount\": 0, \"tax\": 0 }\n  ]\n}"
            }
          }
        },
        {
          "name": "GET Purchases (filter status=draft/approved/partially_received/closed)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/purchases?status=draft",
              "host": ["{{base_url}}"],
              "path": ["api","purchases"],
              "query": [{"key":"status","value":"draft"}]
            }
          }
        },
        {
          "name": "GET Purchase (detail)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases/{{purchase_id}}","host":["{{base_url}}"],"path":["api","purchases","{{purchase_id}}"]}
          }
        },
        {
          "name": "POST Purchase Approve (ubah status → approved)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases/{{purchase_id}}/approve","host":["{{base_url}}"],"path":["api","purchases","{{purchase_id}}","approve"]}
          }
        },
        {
          "name": "POST Purchase Cancel (jika perlu)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases/{{purchase_id}}/cancel","host":["{{base_url}}"],"path":["api","purchases","{{purchase_id}}","cancel"]}
          }
        }
      ]
    },

    {
      "name": "05 Goods Receipt (GR) — dari halaman Purchase",
      "item": [
        {
          "name": "GET For-Receipt (load remaining per item)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases/{{purchase_id}}/for-receipt","host":["{{base_url}}"],"path":["api","purchases","{{purchase_id}}","for-receipt"]}
          }
        },
        {
          "name": "POST Receive (buat + post GR, tambah stok & stock_logs)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/purchases/{{purchase_id}}/receive","host":["{{base_url}}"],"path":["api","purchases","{{purchase_id}}","receive"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"received_date\": \"2025-09-16\",\n  \"notes\": \"Batch 1\",\n  \"items\": [\n    { \"purchase_item_id\": 1, \"qty_received\": 10, \"condition_notes\": \"OK\" },\n    { \"purchase_item_id\": 2, \"qty_received\": 2,  \"condition_notes\": \"Dus penyok\" }\n  ]\n}"
            }
          }
        },
        {
          "name": "GET Receipts (list) — opsional",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/receipts","host":["{{base_url}}"],"path":["api","receipts"]}
          }
        },
        {
          "name": "GET Receipt (detail) — opsional",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/receipts/{{goods_receipt_id}}","host":["{{base_url}}"],"path":["api","receipts","{{goods_receipt_id}}"]}
          }
        }
      ]
    },

    {
      "name": "06 Stock Logs & Inventory",
      "item": [
        {
          "name": "GET Stock Logs by Product",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/stock-logs?product_id={{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api","stock-logs"],
              "query": [{"key":"product_id","value":"{{product_id}}"}]
            }
          }
        },
        {
          "name": "POST Stock Adjustment (manual, opsional)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/products/{{product_id}}/stock/change","host":["{{base_url}}"],"path":["api","products","{{product_id}}","stock","change"]},
            "body": {"mode":"raw","raw":"{\n  \"change_type\": \"adjustment\",\n  \"quantity\": -2,\n  \"note\": \"Koreksi stok fisik\"\n}"}
          }
        }
      ]
    },

    {
      "name": "07 Sales (POS)",
      "item": [
        {
          "name": "POST Sale (transaksi)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"},
              {"key":"Content-Type","value":"application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/sales","host":["{{base_url}}"],"path":["api","sales"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_name\": \"Budi\",\n  \"items\": [\n    {\"product_id\": {{product_id}}, \"qty\": 2},\n    {\"product_id\": 2, \"qty\": 1}\n  ],\n  \"discount\": 0,\n  \"tax\": 0,\n  \"payments\": [\n    {\"method\": \"cash\", \"amount\": 400000}\n  ]\n}"
            }
          }
        },
        {
          "name": "GET Sales (list)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/sales","host":["{{base_url}}"],"path":["api","sales"]}
          }
        },
        {
          "name": "GET Sale (detail)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/sales/{{sale_id}}","host":["{{base_url}}"],"path":["api","sales","{{sale_id}}"]}
          }
        },
        {
          "name": "POST Sale Void (admin — kembalikan stok)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/sales/{{sale_id}}/void","host":["{{base_url}}"],"path":["api","sales","{{sale_id}}","void"]}
          }
        }
      ]
    },

    {
      "name": "08 Read-Only (Referensi)",
      "item": [
        {
          "name": "GET Categories (list)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/categories","host":["{{base_url}}"],"path":["api","categories"]}
          }
        },
        {
          "name": "GET Products (by category & search)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/products?category_id={{category_id}}&search=logo",
              "host": ["{{base_url}}"],
              "path": ["api","products"],
              "query": [
                {"key":"category_id","value":"{{category_id}}"},
                {"key":"search","value":"logo"}
              ]
            }
          }
        }
      ]
    },

    {
      "name": "09 Logout",
      "item": [
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Accept","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{auth_token}}"}
            ],
            "url": {"raw":"{{base_url}}/api/logout","host":["{{base_url}}"],"path":["api","logout"]}
          }
        }
      ]
    }
  ]
}
