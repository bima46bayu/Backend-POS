            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data.token) {",
                  "    pm.collectionVariables.set('auth_token', data.token);",
                  "    pm.test('Auth token stored', function(){ pm.expect(pm.collectionVariables.get('auth_token')).to.be.ok; });",
                  "  }",
                  "} catch(e) { console.log(e); }"
                ]
              }
            }
          ],
