    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (Admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Register (Kasir)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Kasir A\",\n  \"email\": \"kasir@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"kasir\"\n}"
            }
          }
        },
        {
          "name": "Login (set {{auth_token}} otomatis)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data.token) {",
                  "    pm.collectionVariables.set('auth_token', data.token);",
                  "    pm.test('Stored auth token', function(){ pm.expect(pm.collectionVariables.get('auth_token')).to.be.ok; });",
                  "  }",
                  "} catch(e) { /* ignore */ }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/login", "host": ["{{base_url}}"], "path": ["api","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/logout", "host": ["{{base_url}}"], "path": ["api","logout"] }
          }
        }
      ]
    },

