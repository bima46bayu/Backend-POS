# .htaccess di public/uploads
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Allow image files (Apache 2.4+)
<FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
    Require all granted
</FilesMatch>

# Block PHP files
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>
